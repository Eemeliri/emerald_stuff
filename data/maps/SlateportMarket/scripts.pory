            special(ChoosePartyMon)
            waitstate
            copyvar(VAR_RESULT, VAR_0x8004)
            specialvar(VAR_0x8008, trymaxDefenseIV)
            if (var(VAR_0x8008) == FALSE) {
                msgbox(format("That Pokémon's Defense is already at its peak!"))
