mapscripts Dewford_TrainingGrounds_MapScripts {}


script dewfordDojoMakuhita {
    bufferspeciesname(0, SPECIES_MAKUHITA)

    lock
    faceplayer
    playmoncry(SPECIES_MAKUHITA, CRY_MODE_NORMAL)
    delay(40)
    waitmoncry
    release
    end
}

