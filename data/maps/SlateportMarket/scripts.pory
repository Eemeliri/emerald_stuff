}

script Oldman_Mint_Mart{
    lock
    faceplayer
    msgbox(format("Hello! Are you interested in fresh mints I've harvested today?"))
    checkitem(ITEM_POTION, 1)
    if (var(VAR_RESULT) == FALSE) {
        msgbox("You don't have the item!")
        release
        end
    }
    msgbox("You have a potion!")
    waitmessage
    release
    end
}